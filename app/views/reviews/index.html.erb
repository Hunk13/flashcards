<h2 align="center">Тренировка перевода</h2>
<% if @card.nil? %>
  <h2>Нет карточек для тренировки</h2>
<% else %>
  <%= simple_form_for :review, url: reviews_path, method: :post, class: "form-horizontal" do |f| %>
  <strong>Оригинальный текст:</strong><br/>
  <%= @card.translated_text %>
  <%= f.hidden_field :card_id, value: @card.id %>
    <div class="form-group">
      <p><%= image_tag @card.picture.url(:medium) %></p>
    </div>
    <div class="form-group">
      <p>
        <%= f.input :user_translation, html: { class: "form-control" },
                                       as: :string,
                                       label: "Введите перевод слова:" %>
      </p>
    </div>
    <div>
      <p class="form-group">
        <%= f.submit 'Проверить' %>
      </p>
    </div>
  <% end %>
<% end %>