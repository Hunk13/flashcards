<!DOCTYPE html>
<html>
  <head>
    <title><%= t("views.app_name") %></title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag "favicon.ico" %>
  </head>

<body>
<section id="container">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
    <% if current_user %>
      <%= render "shared/user" %>
    <% else %>
      <%= render "shared/guest" %>
    <% end %>
    </div>
  </nav>
<footer>
  <div class="hero-unit">
    <h1><%= link_to t("views.app_name"), root_path %></h1>
    <p>
      <h3><%= t("views.app_description") %></h3>
    </p>
  </div>
  <% if current_user %>
    <%= render "shared/navi" %>
  <% end %>
</footer>

<% if Rails.env.production? %>
<!-- Yandex.Metrika counter -->
<script type="text/javascript">
    (function (d, w, c) {
        (w[c] = w[c] || []).push(function() {
            try {
                w.yaCounter35871660 = new Ya.Metrika({
                    id:35871660,
                    clickmap:true,
                    trackLinks:true,
                    accurateTrackBounce:true,
                    webvisor:true
                });
            } catch(e) { }
        });

        var n = d.getElementsByTagName("script")[0],
            s = d.createElement("script"),
            f = function () { n.parentNode.insertBefore(s, n); };
