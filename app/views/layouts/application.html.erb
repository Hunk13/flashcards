<!-- /Yandex.Metrika counter -->
<% end %>
  <%= yield %>
  <%= debug(params) if Rails.env.development? %>

  <p class="color-notice"><%= flash[:notice] %></p>
  <p class="color-alert"><%= flash[:alert] %></p>

</section>

</body>
</html>
