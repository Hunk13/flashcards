<!DOCTYPE html>
<html>
  <head>
    <title>Флэшкарточкер</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
<body>

<section id="container">

    <header class="clearfix navbar navbar-fixed-top navbar-inverse">
      <h1>Флэшкарточкер</h1>
      <ul class="navigation-links nav pull-right">
        <li><%= link_to "Все карточки",    '#' %>
        <li><%= link_to "Добавить карточку",    '#' %>
      </ul>
    </header>

    <section>
      <div class="container">
        <%= yield %>
      </div>
    </section>
</section>



</body>
</html>
