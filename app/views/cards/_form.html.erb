<%= simple_form_for(card) do |f| %>
<form class="form-inline">
  <div class="form-group col-md-4">
    <p>
      <%= f.input :original, as: :string, label: "Оригинальный текст:" %>
    </p>
  </div>
  
  <div class="form-group col-md-4">
    <p>
      <%= f.input :translated, as: :string, label: "Перевод:" %>
    </p>
  </div>

  <div class="form-group col-md-4">
    <p>
      <%= f.input :review, as: :date, order: [:day, :month, :year], discard_year: true, label: "Дата пересмотра карточки", default: 3.days.from_now %>
    </p>
  </div>

  <p class="col-md-4">
    <br>
    <%= f.button :submit, "Создать карточку" %>
  </p>
</form>
<% end %>