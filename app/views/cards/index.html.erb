<h1>Список всех карточек</h1>
 
<div class="table-responsive">
<table class="table table-striped">
  <tr>
    <th>Оригинальный текст</th>
    <th>Перевод</th>
    <th>Дата</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original %></td>
      <td><%= card.translated %></td>
      <td><%= card.review.strftime("%d/%m/%Y") %></td>
      <td><%= link_to 'Показать', card_path(card) %></td>
      <td><%= link_to 'Редактировать', edit_card_path(card) %></td>
      <td><%= link_to 'Удалить', card_path(card), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>
</div>